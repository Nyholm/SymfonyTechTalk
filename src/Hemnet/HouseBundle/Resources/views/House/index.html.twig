{% extends '::base.html.twig' %}

{% block body -%}
    <h1>House list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Area</th>
                <th>Price</th>
                <th>Street</th>
                <th>Agent</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('house_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.area }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.agent }}</td>
                <td>{{ entity.category }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('house_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('house_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('house_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
